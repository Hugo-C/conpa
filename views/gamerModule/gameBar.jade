div#gameBar(class="col-lg-2 col-md-2 col-sm-2")
  div(class="col-lg-12 col-md-12 col-sm-12 col-xs-12")
    div(class="row")
      div(data-i18n="turnLabel" class="fieldLabel col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10") Turn
    div(class="row")
      div#playerTurn(class="box rowFlexContainer col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10")
        span
    div(class="row")
      div(data-i18n="questionLabel" class="fieldLabel col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10") Question
    div(class="row")
      div#playerQuestion(class="box rowFlexContainer col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10")
        div(class="col-lg-12 col-md-12 col-sm-12 col-xs-12")
          span
    div(class="row")
      div(data-i18n="cardLabel" class="fieldLabel col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10") Card
    div(class="row")
      div(class="box col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10")
        div(class="rowFlexContainer col-lg-12 col-md-12 col-sm-12 col-xs-12")
          div#familyLogoDiv(class="col-lg-4 col-md-4 col-sm-4 col-xs-4")
            span#familyLogoText
            img#cardFamilyLogo(alt="familyLogo col-lg-12 col-md-12 col-sm-12 col-xs-12")
          button#cardHelp(class=" col-lg-offset-5 col-lg-3 col-md-offset-5 col-md-3 col-sm-offset-5 col-sm-3 col-xs-offset-5 col-xs-3")
        div(class="rowFlexContainer col-lg-12 col-md-12 col-sm-12 col-xs-12")
          p#cardContent      
    div(class="row")
      div.box(class="col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10")
        div(class="row rowFlexContainer")
          button#startDice(class="imageButton col-lg-8 col-md-8 col-sm-8 col-xs-8")
          svg(id="hourglassSVG" viewBox="0 0 300 300")
            svg
              circle(cx="150" cy="150" r="130" style="stroke: lightblue; stroke-width:18; fill:transparent" class="hourglassStroke")
              circle(cx="150" cy="150" r="115" style="fill:#2c3e50" class="sandFill")
              path(style="stroke: #2c3e50; stroke-dasharray:820; stroke-dashoffset:820; stroke-width:18; fill:transparent" d="M150,150 m0,-130 a 130,130 0 0,1 0,260 a 130,130 0 0,1 0,-260" class="sandStroke")
                animate(class="hourglassAnimation indivTimerAnimation" attributeName="stroke-dashoffset" dur="0s" to="-820" repeatCount="1")
            svg
              path(id="hourglass" d="M150,150 C60,85 240,85 150,150 C60,215 240,215 150,150 Z" style="stroke: white; stroke-width:5; fill:white;")
              path(id="frame" d="M100,97 L200, 97 M100,203 L200,203 M110,97 L110,142 M110,158 L110,200 M190,97 L190,142 M190,158 L190,200 M110,150 L110,150 M190,150 L190,150" 
                   style="stroke:lightblue; stroke-width:6; stroke-linecap:round" class="hourglassStroke") 
              animateTransform(class="hourglassAnimation indivTimerAnimation" xlink:href="#frame" attributeName="transform" type="rotate" begin="0s" dur="0s" values="0 150 150; 0 150 150; 180 150 150" keyTimes="0; 0.8; 1" repeatCount="1" )
              animateTransform(class="hourglassAnimation indivTimerAnimation" xlink:href="#hourglass" attributeName="transform" type="rotate" begin="0s" dur="0s" values="0 150 150; 0 150 150; 180 150 150" keyTimes="0; 0.8; 1" repeatCount="1" )
            svg
              polygon(id="upper" points="120,125 180,125 150,147" style="fill:#2c3e50;" class="sandFill")
                animate(class="hourglassAnimation indivTimerAnimation" attributeName="points" dur="0s" keyTimes="0; 0.8; 1" values="120,125 180,125 150,147; 150,150 150,150 150,150; 150,150 150,150 150,150" repeatCount="1")
              path(id="line" stroke-linecap="round" stroke-dasharray="1,4" stroke-dashoffset="200.00" stroke="#2c3e50" stroke-width="2" d="M150,150 L150,198" class="sandStroke")
                animate(class="hourglassAnimation indivTimerAnimation" attributeName="stroke-dashoffset" dur="0s" to="1.00" repeatCount="1")
                animate(class="hourglassAnimation indivTimerAnimation" attributeName="d" dur="0s" to="M150,195 L150,195" values="M150,150 L150,198; M150,150 L150,198; M150,198 L150,198; M150,195 L150,195" keyTimes="0; 0.65; 0.9; 1" repeatCount="1")
                animate(class="hourglassAnimation indivTimerAnimation" attributeName="stroke" dur="0s" keyTimes="0; 0.65; 0.8; 1" values="#2c3e50;#2c3e50;transparent;transparent" to="transparent" repeatCount="1")      
              g(id="lower")
                path(d="M150,180 L180,190 A28,10 0 1,1 120,190 L150,180 Z" style="stroke: transparent; stroke-width:5; fill:#2c3e50;" class="sandFill")
                  animateTransform(class="hourglassAnimation indivTimerAnimation" attributeName="transform" type="translate" keyTimes="0; 0.65; 1" values="0 15; 0 0; 0 0" dur="0s" repeatCount="1" )
                animateTransform(class="hourglassAnimation indivTimerAnimation" xlink:href="#lower" attributeName="transform"
                              type="rotate"
                              begin="0s" dur="0s"
                              values="0 150 150; 0 150 150; 180 150 150"
                              keyTimes="0; 0.8; 1"
                              repeatCount="1")
              path(d="M150,150 C60,85 240,85 150,150 C60,215 240,215 150,150 Z" style="stroke: white; stroke-width:5; fill:transparent;")
                animateTransform(class="hourglassAnimation indivTimerAnimation" attributeName="transform"
                              type="rotate"
                              begin="0s" dur="0s"
                              values="0 150 150; 0 150 150; 180 150 150"
                              keyTimes="0; 0.8; 1"
                              repeatCount="1")
        
              path(id="frame" d="M100,97 L200, 97 M100,203 L200,203" style="stroke:lightblue; stroke-width:6; stroke-linecap:round" class="hourglassStroke")
                animateTransform(class="hourglassAnimation indivTimerAnimation" attributeName="transform"
                              type="rotate"
                              begin="0s" dur="0s"
                              values="0 150 150; 0 150 150; 180 150 150"
                              keyTimes="0; 0.8; 1"
                              repeatCount="1")
        div(class="row rowFlexContainer")
          button#endOfTurn(data-i18n="endOfTurnLabel" class="myCustomButton playerOnly")
      
      
    
