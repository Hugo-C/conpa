div#exitPanel(class="gamePanel row")
  div(class="gamePanelHeader row rowFlexContainer")
    span(data-i18n="exitPanelTitle")
  div(class="gamePanelBody row rowFlexContainer")
    div(class="col-lg-12 col-md-12 col-sm-12 col-xs-12 rowFlexContainer")
  div(class="gamePanelInfo row rowFlexContainer")
    span#exitMessage
  div(class="gamePanelBottom row rowFlexContainer")
    button#leaveAlone(data-i18n="leaveAlone" class="myCustomButton col-lg-3 col-md-3 col-sm-3 col-xs-3")
    button#stopGame(data-i18n="stopGame" class="myCustomButton col-lg-offset-1 col-lg-3 col-md-offset-1 col-md-3 col-sm-offset-1 col-sm-3 col-xs-offset-1 col-xs-3") 
    button#validateExit(data-i18n="stopGameAgree" class="myCustomButton col-lg-offset-1 col-lg-3 col-md-offset-1 col-md-3 col-sm-offset-1 col-sm-3 col-xs-offset-1 col-xs-3")
    button#closeExitPanel(data-i18n="closeExitPanel" class="myCustomButton col-lg-offset-1 col-lg-3 col-md-offset-1 col-md-3 col-sm-offset-1 col-sm-3 col-xs-offset-1 col-xs-3")
    button#cancelExit(data-i18n="stopGameRefuse" class="myCustomButton col-lg-offset-1 col-lg-3 col-md-offset-1 col-md-3 col-sm-offset-1 col-sm-3 col-xs-offset-1 col-xs-3")
