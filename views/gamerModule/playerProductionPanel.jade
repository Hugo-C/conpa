div#productionPanel(class="basicContainer col-lg-12 col-md-12 col-sm-12")
  div(class="basicContainer col-lg-1 col-md-1 col-sm-1 col-xs-1")
    div(class="row")
      div(class="basicContainer centeredItems selectedProduction")
        span(data-i18n="myProductionAccess" class="playerOnly") My production
        span(data-i18n="mosaicAccess" class="animatorOnly") Mosaic
    div(class="row playerOnly")
      button#setPrivacy(value="private" class="basicContainer stretchedImage col-lg-12 col-md-12 col-sm-12")
    div(class="rowFlexContainer row")
      p(data-i18n="playersProductionAccess" class="col-lg-12 col-md-12 col-sm-12") Players production
    div#productionList(class="row")
  div(class="basicContainer col-lg-11 col-md-11 col-sm-11 col-xs-11")
    button#displayList(class="basicContainer")
    div#colorMenu(class="basicContainer stretchedImage menu")
      button(value="red" class="col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-1")
      button(value="green" class="col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-1")
      button(value="yellow" class="col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-1")
      button(value="blue" class="col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-1")
      button(value="white" class="col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-1")
      button(value="purple" class="col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-1")
      button(value="brown" class="col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-1")
    div#svgMenu(class="basicContainer menu")
      button#bouton(value="red" class="playerOnly col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-1")
      button#color(value="red" class="playerOnly col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-1")
      button#moveElement(class="col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-1")
      button#fullScreen(class="off col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-1")
    div#production(class="basicContainer imageBackground")
        div#overlay
            div
              h4(class="legend") this legend will fill itself dynamically, don't forget you can resize it and move it.
      include contextualMenu.jade
    div#mosaic(class="basicContainer animatorOnly")
