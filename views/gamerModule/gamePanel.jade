div#gamePanel(class="basicContainer bordered col-lg-10 col-md-10 col-sm-10 col-xs-10")
  div(class="row")
    button#exit(class="basicContainer stretchedImage col-lg-1 col-md-1 col-sm-1 col-xs-1")
    div(class="pseudoField basicContainer stretchedImage col-lg-1 col-md-1 col-sm-1 col-xs-1")
    div#pseudo(class="pseudoField basicContainer rowFlexContainer col-lg-2 col-md-2 col-sm-2 col-xs-2")
      span(class="pseudoField")
    div(class="globalTimerField basicContainer stretchedImage col-lg-1 col-md-1 col-sm-1 col-xs-1")
    div#globalTimer(class="globalTimerField basicContainer rowFlexContainer col-lg-1 col-md-1 col-sm-1 col-xs-1")
      span(class="globalTimerField") 00:00:00
    div(class="questionField basicContainer stretchedImage playerOnly col-lg-1 col-md-1 col-sm-1 col-xs-1")
    div#question(class="questionField basicContainer rowFlexContainer playerOnly col-lg-5 col-md-5 col-sm-5 col-xs-5")
      div(class="col-lg-12 col-md-12 col-sm-12 col-xs-12")
        span(class="questionField col-lg-12 col-md-12 col-sm-12 col-xs-12")
  div(class="row")
    include playerProductionPanel.jade
  div#exitPanel(class="row")
    div(class="row rowFlexContainer")
      span#exitPanelTitle(data-i18n="exitPanelTitle")
    div(class="row rowFlexContainer")
      div(class="col-lg-12 col-md-12 col-sm-12 col-xs-12 rowFlexContainer")
    div(class="row rowFlexContainer")
      span#exitMessage
    div(class="row rowFlexContainer")
      button#leaveAlone(data-i18n="leaveAlone" class="myCustomButton col-lg-3 col-md-3 col-sm-3 col-xs-3")
      button#stopGame(data-i18n="stopGame" class="myCustomButton col-lg-offset-1 col-lg-3 col-md-offset-1 col-md-3 col-sm-offset-1 col-sm-3 col-xs-offset-1 col-xs-3") 
      button#validateExit(data-i18n="stopGameAgree" class="myCustomButton col-lg-offset-1 col-lg-3 col-md-offset-1 col-md-3 col-sm-offset-1 col-sm-3 col-xs-offset-1 col-xs-3")
      button#closeExitPanel(data-i18n="closeExitPanel" class="myCustomButton col-lg-offset-1 col-lg-3 col-md-offset-1 col-md-3 col-sm-offset-1 col-sm-3 col-xs-offset-1 col-xs-3")
      button#cancelExit(data-i18n="stopGameRefuse" class="myCustomButton col-lg-offset-1 col-lg-3 col-md-offset-1 col-md-3 col-sm-offset-1 col-sm-3 col-xs-offset-1 col-xs-3")
  div#chatInfos(class="col-lg-12 col-md-12 col-sm-12 col-xs-12")
    div(class="basicContainer col-lg-7 col-md-7 col-sm-7 col-xs-7")
      div(class="row")
        section#messages(class="basicContainer col-lg-12 col-md-12 col-sm-12 col-xs-12")
      div(class="row")
        input#inputBox(class="basicContainer col-lg-9 col-md-9 col-sm-9 col-xs-9" type="text" value="Write your message here !")
        select#chatPlayers(class="col-lg-2 col-md-2 col-sm-2 col-xs-2")
          option(data-i18n="generalChannel" value="all")
        button#sendButton(class="basicContainer stretchedImage col-lg-1 col-md-1 col-sm-1 col-xs-1")
    div(class="basicContainer col-lg-5 col-md-5 col-sm-5 col-xs-5")
      div(class="basicContainer row")
        textarea#notesArea(data-i18n="inputTextTempLabel" class="col-lg-11 col-md-11 col-sm-11 col-xs-11")
        div#menu(class="basicContainer columnFlexContainer col-lg-1 col-md-1 col-sm-1 col-xs-1")
          button#copy.notesTool
          button#clear.notesTool
  span(id="ruler")
