  div(class="rowFlexContainer row")
    div(class="rowFlexContainer stretchedImage col-lg-6 col-md-6")
      span(class="myCustomTitle") Choose your question
  div(class="rowFlexContainer stretchedImage row")
    div#playersQuestion(class="col-lg-12 col-md-12")
    div#guide(class="col-lg-6 col-md-6")
  div(class="row")
    div(class="rowFlexContainer stretchedImage col-lg-12 col-md-12")
      input#myQuestion(type="text" class="col-lg-4 col-md-4")
      div(class="stretchedImage col-lg-offset-1 col-lg-4 col-md-offset-1 col-md-4")
        button#projector(class="col-lg-offset-9 col-lg-1 col-md-offset-9 col-md-1")
      div(class="col-lg-offset-1 col-lg-2 col-md-offset-1 col-md-2")
        div(class="row")
          button#validate(class="col-lg-6 col-md-6") VALIDATE
        div(class="rowFlexContainer row")
          span#nbReady(class="col-lg-6 col-md-6")
