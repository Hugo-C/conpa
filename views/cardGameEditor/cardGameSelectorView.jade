div#selector(class="col-offset-lg-2 col-lg-10 col-md-offset-2 col-md-10 col-sm-offset-2 col-sm-10 col-xs-offset-2 col-xs-10")
  p#title Select card game
  div.list(class="row")
    each cardGame,index in cardGames
      - var idCardGame = "cardGame" + index
      div.cardGame.centeredColumn(id=idCardGame tabindex="0")
        i.cardImage.centeredImage
        p.name #{cardGame}
  div#control(class="row")
    label#validateButtonLabel.centeredImage(class="col-lg-offset-10 col-lg-1 col-md-offset-10 col-md-1 col-sm-offset-10 col-sm-1 col-xs-offset-10 col-xs-1" for="validateButton")
    input#validateButton(style="display: none")
    label#cancelButtonLabel.centeredImage(class="col-lg-1 col-md-1 col-sm-1 col-xs-1" for="cancelButton")
    input#cancelButton(style="display: none")
