div#sideNav(class="col-lg-2 col-md-2 col-sm-2 col-xs-2")
  div#logoEditor(class="row")
    div#logo.centeredImage(class="col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10")
  div#cardGameName.centeredColumn(class="row")
    p#label(class="col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10") Card Game Title
    input#inputName(type="text" class="col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10")
  div#cardActions.centeredRow(class="row")
    i#addCardButton.centeredImage(class="col-lg-offset-1 col-lg-4 col-md-offset-1 col-md-4 col-sm-offset-1 col-sm-4 col-xs-offset-1 col-xs-4")
    i#removeCardButton.centeredImage(class="col-lg-offset-2 col-lg-4 col-md-offset-2 col-md-4 col-sm-offset-2 col-sm-4 col-xs-offset-2 col-xs-4")
  div#savingActions.centeredColumn(class="row")
    div#save.centeredRow(class="col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10")
      i#saveButton.centeredImage(class="col-lg-offset-1 col-lg-4 col-md-offset-1 col-md-4 col-sm-offset-1 col-sm-4 col-xs-offset-1 col-xs-4")
      p#saveLabel(class="col-lg-7 col-md-7 col-sm-7 col-xs-7") save
    div#saveAs.centeredRow(class="col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10")
      i#saveAsButton.centeredImage(class="col-lg-offset-1 col-lg-4 col-md-offset-1 col-md-4 col-sm-offset-1 col-sm-4 col-xs-offset-1 col-xs-4")
      p#saveAsLabel(class="col-lg-7 col-md-7 col-sm-7 col-xs-7") save as
  div#sharingActions.centeredRow(class="row")
    label#exportToCSVLabel.centeredImage(class="col-lg-4 col-md-4 col-sm-4 col-xs-4" for="exportToCSV")
    input#exportToCSV(style="display: none")
    label#importToCSVLabel.centeredImage(class="col-lg-4 col-md-4 col-sm-4 col-xs-4" for="importToCSV")
    input#importToCSV(type="file" accept=".csv" style="display: none")
    label#exportToPdfLabel.centeredImage(class="col-lg-4 col-md-4 col-sm-4 col-xs-4" for="exportToPDF")
    input#exportToPdf(type="file" style="display: none")
    
