div(class="wrapper col-lg-12 col-md-12")
  div(class="serverList active col-lg-12 col-md-12")
    div(class="header row")
      h3(class="col-lg-12 col-md-12") Server list
    div(class="body row")
      div(class="col-lg-12 col-md-12")
        table#serverList(class="col-lg-12 col-md-12")
          thead
            tr
              th Server name
              th Host
              th Animator
              th Players
              th Status
          tbody
    div(class="bottom row")
      div(class="col-lg-offset-8 col-lg-4 col-md-offset-8 col-md-4")
        button#create(class="switch col-lg-offset-1 col-lg-5 col-md-offset-1 col-md-5") Create
        button#join(class="col-lg-offset-1 col-lg-5 col-md-offset-1 col-md-5") Join
  
  div(class="serverManager col-lg-6 col-md-6")
    div(class="header row")
      h3(class="col-lg-12 col-md-12") Game Server Manager
    div(class="body row")
      div(class="row")
        div(class="col-lg-12 col-md-12")
          label(class="col-lg-offset-1 col-lg-4 col-md-offset-1 col-md-4") Name
          label(class="col-lg-offset-2 col-lg-4 col-md-offset-2 col-md-4") Animator
        div(class="col-lg-12 col-md-12")
          input#name(type="text" class="col-lg-offset-1 col-lg-4 col-md-offset-1 col-md-4")
          input#role(type="button" value="player" class="col-lg-offset-2 col-lg-4 col-md-offset-2 col-md-4")
      div(class="row")    
        div(class="col-lg-12 col-md-12")
          label(class="col-lg-offset-1 col-lg-2 col-md-offset-1 col-md-2") Player
          label(class="col-lg-offset-1 col-lg-3 col-md-offset-1 col-md-3") Individual Timer
          label(class="col-lg-offset-1 col-lg-3 col-md-offset-1 col-md-3") Global Timer
        div(class="col-lg-12 col-md-12")
          input#places(type="number" class="col-lg-offset-1 col-lg-2 col-md-offset-1 col-md-2")
          input#indivTimer(type="number" class="col-lg-offset-1 col-lg-3 col-md-offset-1 col-md-3")
          input#globalTimer(type="number" class="col-lg-offset-1 col-lg-3 col-md-offset-1 col-md-3")
    div(class="bottom row")
      div(class="col-lg-offset-7 col-lg-4 col-md-offset-7 col-md-4")
        button#cancel(class="switch col-lg-offset-1 col-lg-5 col-md-offset-1 col-md-5") Cancel
        button#validate(class="col-lg-offset-1 col-lg-5 col-md-offset-1 col-md-5") Validate
